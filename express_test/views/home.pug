extends layout

block content
  .home-container
    h1
      | MagiProf is a powerful 
      strong Magic: The Gathering 
      | card search

    form.search-form(action="/search", method="get")
      input(type="text" name="query" placeholder="Search for cards...")
      button(type="submit") Search

    .search-buttons
      button(type="button") Advanced Search
      button(type="button") Syntax Guide
      button(type="button") All Sets
      button(type="button") Random Card

    .featured-list
      each cardName in ['Zur the Enchanter', 'Sauron the Dark Lord', 'Optimus Prime', 'Illusionists Bracers']
        .featured-item= cardName

    .card-grid
      .card-wrapper
        img.card-image(src="/images/Zur the Enchanter (Funke the Lifter).png", alt="Zur the Enchanter")
        .card-name-overlay Zur the Enchanter
      .card-wrapper
        img.card-image(src="/images/Sauron, the Dark Lord (Boulangon, the Darkness Lord).png", alt="Sauron, the Dark Lord")
        .card-name-overlay Sauron, the Dark Lord
      .card-wrapper
        img.card-image(src="/images/Optimus Prime, Hero (Kropptimus Prime, Optimizer).png", alt="Optimus Prime, Hero")
        .card-name-overlay Optimus Prime, Hero
      .card-wrapper
        img.card-image(src="/images/Illusionist’s Bracers (Metallurgist’s Bracers).png", alt="Illusionist's Bracers")
        .card-name-overlay Illusionist's Bracers